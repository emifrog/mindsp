// Événements du calendrier
model AgendaEvent {
  id          String   @id @default(uuid())
  title       String
  description String?  @db.Text
  startDate   DateTime
  endDate     DateTime
  allDay      Boolean  @default(false)
  
  type        AgendaEventType @default(AUTRE)
  status      AgendaEventStatus @default(SCHEDULED)
  
  location    String?
